<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bmf.infrastructure.dal.mapper.BusinessFlowMapper">
    <resultMap id="BaseResultMap" type="com.bmf.infrastructure.dal.po.BusinessFlowPO">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="business_code" jdbcType="INTEGER" property="businessCode"/>
        <result column="flow_id" jdbcType="INTEGER" property="flowId"/>
        <result column="flow_name" jdbcType="VARCHAR" property="flowName"/>
        <result column="flow_alias" jdbcType="VARCHAR" property="flowAlias"/>
        <result column="role_id" jdbcType="INTEGER" property="roleId"/>
        <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate"/>
        <result column="gmt_modify" jdbcType="TIMESTAMP" property="gmtModify"/>
        <result column="is_deleted" jdbcType="TINYINT" property="isDeleted"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, business_code, flow_id, flow_name, flow_alias, role_id, gmt_create, gmt_modify, is_deleted
    </sql>

    <select id="selectOne" resultMap="BaseResultMap" parameterType="com.bmf.infrastructure.dal.po.BusinessFlowPO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM bmf_business_flow
        where flow_id = #{flowId}
        limit 1
    </select>

    <insert id="insert" parameterType="com.bmf.infrastructure.dal.po.BusinessFlowPO">
        insert into bmf_business_flow (business_code, flow_id, flow_name, flow_alias, role_id)
        values (
            #{businessCode,jdbcType=INTEGER},
            #{flowId,jdbcType=INTEGER},
            #{flowName,jdbcType=VARCHAR},
            #{flowAlias,jdbcType=VARCHAR},
            #{roleId,jdbcType=INTEGER}
        )
    </insert>

    <delete id="delete">
        delete from bmf_business_flow
        where business_code = #{businessCode}
        and flow_id = #{flowId}
    </delete>
</mapper>